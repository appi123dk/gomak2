<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>프로젝트 현황</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'projects', :action => 'index' %>">Project</a>
            </li>
            <li>
                <a>Tables</a>
            </li>
            <li class="active">
                <strong>전체현황</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>프로젝트 내역</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>순서</th>
                                <th>프로젝트명</th>
                                <th>브랜드명</th>
                                <th>썸네일</th>
                                <th>유튜브URL</th>
                                <th>수정</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @projects.each do |project| %>
                                <tr class="gradeX">
                                    <td><%= project.order %></td>
                                    <td><%= project.project_name %></td>
                                    <td><%= project.brand_name %></td>
                                    <td style="width:10%"><img src="<%= project.thumb_url %>" style="width:100%"></td>
                                    <td><a href="<%= project.video_url %>" target="_blank">영상보기</a></td>
                                    <td><a href="/projects/edit/<%= project.id %>" class="btn btn-xs btn-warning">수정</a></td>
                                </tr>
                            <% end %>
                        </tbody>     
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


    $(function() {

        $('.dataTables-example').DataTable({
            dom: '<"html5buttons"B>lTfgitp',
            pageLength: 25,
            buttons: [
                { extend: 'copy'},
                {extend: 'csv'},
                {extend: 'excel', title: 'ExampleFile'},
                {extend: 'pdf', title: 'ExampleFile'},

                {extend: 'print',
                    customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ]

        });
    });
</script>

<% end %>