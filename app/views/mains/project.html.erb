<section id="content">
	<div class="content-wrap">
		<div class="container clearfix">
			<h5 class="main-font project-brand"><%= @project.client %> <%= @project.brand_name %></h5>
			<h1 class="project-name"><%= @project.project_name %></h1>
	<!-- Portfolio Single Video
	============================================= -->
	<div class="col_full portfolio-single-image">
		<iframe src="https://www.youtube.com/embed/<%= @project.video_url %>" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
	</div><!-- .portfolio-single-image end -->

	<!-- Portfolio Single Content
	============================================= -->
	<div class="col_full portfolio-single-content">

		<!-- Portfolio Single - Description
		============================================= -->
		<div class="fancy-title title-dotted-border">
			<h2 class="main-font">PROJECT INFO</h2>
		</div>

		<div class="row">
			<div class="col-lg-3 col-xs-6">
				<p class="main-font nobottommargin">CLIENT</p>
				<h5><%= @project.client %></h5>
			</div>
			<div class="col-lg-3 col-xs-6">
				<p class="main-font nobottommargin">BRAND</p>
				<h5><%= @project.brand_name %></h5>
			</div>
			<div class="col-lg-3 col-xs-6">
				<p class="main-font nobottommargin">MEDIA</p>
				<h5><%= @project.media %></h5>
			</div>
			<div class="col-lg-3 col-xs-6">
				<p class="main-font nobottommargin">DIRECTOR</p>
				<h5><%= @project.director %></h5>
			</div>
		</div>
		<!-- Portfolio Single - Description End -->

	</div><!-- .portfolio-single-content end -->


	<div class="clear bottommargin"></div>

	<!-- Related Portfolio Items
	============================================= -->
	<div class="fancy-title title-dotted-border portfolio-single-content">
		<h2 class="main-font">RELATED PROJECTS</h2>
	</div>

	<div id="related-portfolio" class="owl-carousel portfolio-carousel portfolio-3 carousel-widget" data-margin="20" data-nav="false" data-autoplay="5000" data-items-xs="1" data-items-sm="2" data-items-md="3" data-items-lg="2"  data-items-xl="3">
		<% @projects.each do |project| %>
			<div class="oc-item">
				<div class="iportfolio">
					<div class="portfolio-image">
						<a href="portfolio-single.html">
							<img src="<%= project.thumb_url %>" alt="Open Imagination">
						</a>
						<div class="portfolio-overlay">
							<a href="https://www.youtube.com/watch?v=<%= project.video_url %>" class="left-icon" data-lightbox="iframe"><i class="icon-line-play"></i></a>
							<a href="/mains/project/<%= project.id %>" class="right-icon"><i class="icon-line-ellipsis"></i></a>
						</div>
					</div>
					<div class="portfolio-desc">
						<h3><a href="portfolio-single.html">Open Imagination</a></h3>
						<span><a href="#">Media</a>, <a href="#">Icons</a></span>
					</div>
				</div>
			</div>
		<% end %>

	</div><!-- .portfolio-carousel end -->

</div>
	</div>
</section>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
    	$(".current").removeClass("current");
    	$(".nav-work").addClass("current");
    });
  </script>
<% end %>